<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.moritztomasi.clicklesstextenricherapplication" >

    <uses-feature android:name="android.hardware.camera" android:required="true" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:label="CLICKLESS TEXT ENRICHER"
        android:theme="@style/CTETheme" >
        <activity
            android:name=".MainActivity"
            android:label="CLICKLESS TEXT ENRICHER" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ShowTranslationActivity"
            android:label="@string/title_activity_show_translation" >
        </activity>
        <activity
            android:name=".CorrectAndRetryActivity"
            android:label="@string/title_activity_correct_and_retry" >
        </activity>
    </application>

</manifest>
