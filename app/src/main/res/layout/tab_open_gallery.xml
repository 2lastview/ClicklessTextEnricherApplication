<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA" >

    <ImageButton
        android:id="@+id/open_gallery_imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:src="@drawable/gallery_icon"
        android:onClick="getImageFromGallery"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/imageButton_choose_image_gallery_content_description"/>

    <TextView
        android:id="@+id/tap_gallery_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/imageButton_choose_image_gallery"
        android:textColor="#696969"
        android:textSize="12sp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/open_gallery_imageButton"/>

</RelativeLayout>